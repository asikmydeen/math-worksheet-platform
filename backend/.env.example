# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/math-worksheet-platform
# For MongoDB Atlas use:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/math-worksheet-platform

# JWT Secret (Change this to a long random string in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
# Alternative models: gpt-3.5-turbo, gpt-4, gpt-4-turbo, gpt-4o

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 2FA Settings
TWO_FACTOR_APP_NAME=MathWorksheetAI
TWO_FACTOR_WINDOW=2
